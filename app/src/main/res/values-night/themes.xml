<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chakonati" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_900</item>
        <item name="colorPrimaryVariant">@color/gray_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_600</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#00000000</item>
        <!-- Customize your theme here. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>


    <style name="Theme.Chakonati.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>